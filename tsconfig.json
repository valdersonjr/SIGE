{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@atoms": ["src/framework/atoms"],
      "@atoms/*": ["src/framework/atoms/*"],
      "@molecules": ["src/framework/molecules"],
      "@molecules/*": ["src/framework/molecules/*"],
      "@organisms": ["src/framework/organisms"],
      "@organisms/*": ["src/framework/organisms/*"],
      "@templates": ["src/framework/templates"],
      "@templates/*": ["src/framework/templates/*"],
      "@service/*": ["src/service/*"],
      "@service": ["src/service"],
      "@recoil": ["src/recoil"],
      "@recoil/*": ["src/recoil/*"],
      "@hooks": ["src/hooks"]
    }
  },
  "include": ["vite.config.ts", "styled.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
